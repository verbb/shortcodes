{
    "name": "verbb/shortcodes",
    "description": "Use Wordpress-style shortcodes in your Twig templates.",
    "type": "craft-plugin",
    "version": "3.0.0",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "shortcodes"
    ],
    "support": {
        "email": "support@verbb.io",
        "issues": "https://github.com/verbb/shortcodes/issues?state=open",
        "source": "https://github.com/verbb/shortcodes",
        "docs": "https://github.com/verbb/shortcodes",
        "rss": "https://github.com/verbb/shortcodes/commits/v2.atom"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Verbb",
            "homepage": "https://verbb.io"
        },
        {
            "name": "Sam Hernandez",
            "homepage": "https://github.com/samhernandez"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "craftcms/cms": "^4.0.0",
        "verbb/base": "^2.0.0",
        "thunderer/shortcode": "^0.7.4"
    },
    "autoload": {
        "psr-4": {
            "verbb\\shortcodes\\": "src/"
        }
    },
    "extra": {
        "name": "Shortcodes",
        "handle": "shortcodes",
        "changelogUrl": "https://raw.githubusercontent.com/verbb/shortcodes/craft-4/CHANGELOG.md",
        "class": "verbb\\shortcodes\\Shortcodes"
    }
}
